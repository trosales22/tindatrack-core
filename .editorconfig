root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files – don't trim trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files – 2 spaces
[*.json]
indent_style = space
indent_size = 2

# YAML files – 2 spaces
[*.yml]
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# TypeScript React files
[*.tsx]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# JavaScript React files
[*.jsx]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS / SCSS files
[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2
